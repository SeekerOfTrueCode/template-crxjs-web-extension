{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "types": [
      "@types/chrome",
    ]
  },
  "include": [
    "src/vite-env.d.ts",
    "components.d.ts",
    "auto-imports.d.ts",

    ".storybook/preview.ts",
    "scripts/**/*.ts",
    "scripts/*.ts",
    "vite.config.ts",
    "vite.config.shared.ts",
    "package.json"
  ],
  "exclude": [
    "scripts/test-utils.ts"
  ]
}